    }
});
  </script>
  <script>
   $(function() {
        $('input[name="type"
    ]').on('click', function() {
            if ($(this).val() == 'ai') {
                $('#textboxes_boolean').hide();
                $('#dropdowns').hide();
                $('#textboxes').show();
        }
            else if ($(this).val() == 'citation') {
                $('#textboxes_boolean').hide();
                $('#textboxes').hide();
                $('#dropdowns').show();
        }
            else {
                $('#textboxes').hide();
                $('#dropdowns').hide();
                $('#textboxes_boolean').show();
        }
    });
});
    $(document).ready(function(){
        $('#textboxes_boolean').show();
});
  </script>
