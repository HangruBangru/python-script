  <script>
   var input = document.getElementById("comment1");

    input.addEventListener("keyup", function(event) {
      if (event.keyCode === 13) {
        event.preventDefault();
        document.getElementById("myBtn").click();
    }
});
  </script>
  <script>
   var input = document.getElementById("comment2");

